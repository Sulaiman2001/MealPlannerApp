<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    tools:context=".ui.register.RegisterFragment">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_meal" />

    <TextView
        android:id="@+id/emptyInputFieldsMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All input fields must be filled"
        android:textColor="@color/white"
        android:background="@drawable/msg_border"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/emailExistsMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email address is already linked to an account"
        android:textColor="@color/white"
        android:background="@drawable/msg_border"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="25dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/registerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Enter an email..."
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/registerUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Enter a username..."
        android:backgroundTint="@color/white"/>
    <EditText
        android:id="@+id/registerPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Enter a password..."
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Please confirm your password..."
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/emailFormatMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email must contain an @ symbol"
        android:textColor="@color/white"
        android:background="@drawable/msg_border"
        android:textSize="20dp"
        android:layout_marginHorizontal="25dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/passwordMatchMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The passwords do not match"
        android:textColor="@color/white"
        android:background="@drawable/msg_border"
        android:textSize="20dp"
        android:layout_marginHorizontal="25dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/passwordLengthMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The passwords must contain at least 8 characters"
        android:textColor="@color/white"
        android:background="@drawable/msg_border"
        android:layout_marginHorizontal="25dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/passwordNumberMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The passwords must contain at least 1 number"
        android:textColor="@color/white"
        android:background="@drawable/msg_border"
        android:layout_marginHorizontal="25dp"
        android:textSize="20dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/passwordCapitalLetterMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The passwords must contain at least 1 capital letter"
        android:textColor="@color/white"
        android:background="@drawable/msg_border"
        android:textSize="20dp"
        android:layout_marginHorizontal="25dp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="20dp">

        <Button
            android:id="@+id/returnToLogIn"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="Return to login" />

        <Button
            android:id="@+id/register"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/white"
            android:text="Log in"
            android:textColor="@color/black" />

    </LinearLayout>


</LinearLayout>